{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es2018",
            "dom"
        ],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "types": [],
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "../domain/**/*",
        "../persistence/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}